@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>  
    <meta name="viewport" content="width=device-width" />
    <title>Hello World</title>
</head>
<body>
    <main>
        <div class="container">
            <p class="fs-1 fw-bold">@ViewData["Message"]</p>
            <div>
                <p class="fs-3 fw-semibold">Список</p>
                <ol class="list-group list-group-numbered" style="list-style-type: upper-alpha;"> 
                    @for(var i = 0; i <5; i++)
                    {<li>элемент @i списка</li>}
                </ol>
            </div>

            <hr class="mt-3 mb-3"/>

            <h3 class="fs-3 fw-bold">Форма</h3>

            <form method="post" class="mt-3" asp-antiforgery="true">
                <select class="mt-3 form-control" id="Model.SelectedId" name="selectDemo" asp-items="Model.ListItems">
                </select>
                <div class="form-group row mt-3">
                    <div class="col-sm-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="checkbox1" name="checkbox1" />
                            <label class="form-check-label" for="checkbox1">
                                Чек-бокс 1
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="checkbox2" name="checkbox2" />
                            <label class="form-check-label" for="checkbox2">
                                Чек-бокс 2
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="radio1" name="radio1" />
                            <label class="form-check-label" for="radio1">
                                Радио-1
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="radio2" name="radio2" />
                            <label class="form-check-label" for="radio2">
                                Радио-2
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="radio3" name="radio3" />
                            <label class="form-check-label" for="radio3">
                                Радио-3
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group-row">
                    <label for="login" class="col-sm-2 col-form-label">Логин: </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" itemid="login" name="loginfield" placeholder="Введите имя" />
                    </div>
                </div>                
                
                <div class="form-group">
                    <label for="password" class="col-sm-2 col-form-label">Пароль: </label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" itemid="password" name="passwordfield" placeholder="Введите пароль" />
                    </div>
                </div>

                <button type="submit" class="mt-3 btn btn-primary">Отправить</button>

            </form>
        </>
    </main> 
</body>
</html>
